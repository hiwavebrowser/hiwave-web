# HiWave Web - Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# SUPABASE (from your HiWave project)
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# STRIPE
# ===========================================
STRIPE_SECRET_KEY=sk_test_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Payment Links (create these in Stripe Dashboard)
NEXT_PUBLIC_STRIPE_LINK_STARTER=https://buy.stripe.com/starter-link
NEXT_PUBLIC_STRIPE_LINK_SUPPORTER=https://buy.stripe.com/supporter-link
NEXT_PUBLIC_STRIPE_LINK_BELIEVER=https://buy.stripe.com/believer-link
NEXT_PUBLIC_STRIPE_LINK_EARLY_ADOPTER=https://buy.stripe.com/early-adopter-link

# ===========================================
# VERSION TRACKING
# ===========================================
NEXT_PUBLIC_CURRENT_MAJOR_VERSION=1
